extends layout

block content
  .bg__summary
    .login__wrapper.p-0.container.pt-sm-4
      .login__container.shadow.p-3.p-md-5.bg__card
        .h4.mb-0 Hành trình
        .h2.mb-0 Tìm hiểu quê ta
        form(action='/users/register' method='POST').row.mt-4
          .col-md-6.form-group
            input.form-control(name='name' placeholder='Họ và tên' value=values ? values.name : null required)
          .col-md-6.form-group
            .row
              .col-7.d-flex
                input.form-control(name='dd' type='number' min='1' max='31' placeholder='Ngày' required)
                input.ml-3.form-control(name='mm' type='number' min='1' max='12' placeholder='Tháng' required)
              .col-5.pl-0
                input.form-control(name='yyyy' type='number' placeholder='Năm sinh' required)
          .col-md-6.form-group
            .fake__select.dropdown
              button.form-control.text-left.d-flex.align-items-center.justify-content-between.pr-2(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                input.w-100.border-0.user-select-none(name='sex' value=values ? values.sex : null placeholder='Giới tính' style='outline: none' readonly)
                span.material-icons(style='font-size: inherit') keyboard_arrow_down
              .dropdown-menu
                .dropdown-item Nam
                .dropdown-item Nữ
          .col-md-6.form-group
            .fake__select.dropdown
              button.form-control.text-left.d-flex.align-items-center.justify-content-between.pr-2(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                input.w-100.border-0.user-select-none(name='district' value=values ? values.district : null placeholder='Thị xã/Huyện/Thành phố' style='outline: none' readonly)
                span.material-icons(style='font-size: inherit') keyboard_arrow_down
              .dropdown-menu
                .dropdown-item TP. Vũng Tàu
                .dropdown-item TP. Bà Rịa
                .dropdown-item H. Châu Đức
                .dropdown-item H. Xuyên Mộc
                .dropdown-item H. Long Điền
                .dropdown-item H. Đất Đỏ
                .dropdown-item TX. Phú Mỹ
                .dropdown-item H. Côn Đảo
          .col-md-6.form-group
            .fake__select.dropdown
              button.form-control.text-left.d-flex.align-items-center.justify-content-between.pr-2(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                input.w-100.border-0.user-select-none(name='school' value=values ? values.school : null placeholder='Nền tảng' style='outline: none' readonly)
                span.material-icons(style='font-size: inherit') keyboard_arrow_down
              .dropdown-menu
                //- .dropdown-item Trung học cơ sở
                .dropdown-item Trung học phổ thông
                //- .dropdown-item Cao đẳng
                //- .dropdown-item Đại học
          .col-md-6.form-group
            //- input.form-control(name='nameSchool' placeholder='Tên trường' value=values ? values.nameSchool : null required)
            .fake__select.dropdown
              button.form-control.text-left.d-flex.align-items-center.justify-content-between.pr-2(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                input.w-100.border-0.user-select-none(name='nameSchool' placeholder='Tên trường' value=values ? values.nameSchool : null style='outline: none' readonly)
                span.material-icons(style='font-size: inherit') keyboard_arrow_down
              .dropdown-menu
                .dropdown-item Côn Đảo - THPT Võ Thị Sáu
                .dropdown-item Đất Đỏ - THPT Võ Thị Sáu
                .dropdown-item Đất Đỏ - THPT Dương Bạch Mai
                .dropdown-item Châu Đức - TT GDTX
                .dropdown-item Châu Đức - PTDTNT
                .dropdown-item Châu Đức - THPT Nguyễn Văn Cừ
                .dropdown-item Châu Đức - THPT Trần Phú
                .dropdown-item Châu Đức - THPT Nguyễn Trãi
                .dropdown-item Châu Đức - THPT Nguyễn Du
                .dropdown-item Châu Đức - THPT Ngô Quyền
                .dropdown-item Long Điền - THPT Trần Quang Khải
                .dropdown-item Long Điền - TT GDTX Long Điền - Đất Đỏ
                .dropdown-item Long Điền - THPT Long Hải
                .dropdown-item Long Điền - THPT Minh Đạm
                .dropdown-item Long Điền - THPT Trần Văn Quan
                .dropdown-item Xuyên Mộc - TT GDTX
                .dropdown-item Xuyên Mộc - THPT Hòa Bình
                .dropdown-item Xuyên Mộc - THPT Xuyên Mộc
                .dropdown-item Xuyên Mộc - THPT Bưng Riềng
                .dropdown-item Xuyên Mộc - THPT Hòa Hội
                .dropdown-item Xuyên Mộc - THPT Phước Bửu
                .dropdown-item Vũng Tàu - THPT Đinh Tiên Hoàng
                .dropdown-item Vũng Tàu - THPT Nguyễn Huệ
                .dropdown-item Vũng Tàu - THPT chuyên Lê Quý Đôn
                .dropdown-item Vũng Tàu - THPT Nguyễn Thị Minh Khai 
                .dropdown-item Vũng Tàu - THPT Lê Hồng Phong
                .dropdown-item Vũng Tàu - THPT Song Ngữ
                .dropdown-item Vũng Tàu - THPT Vũng Tàu
                .dropdown-item Vũng Tàu - TTGDTX HN VT
                .dropdown-item Vũng Tàu - THPT Trần Nguyên Hãn
                .dropdown-item Bà Rịa - THPT Nguyễn Bỉnh Khiêm
                .dropdown-item Bà Rịa - THPT Bà Rịa
                .dropdown-item Bà Rịa - THPT Châu Thành
                .dropdown-item Phú Mỹ - TT GDTX
                .dropdown-item Phú Mỹ - THPT Hắc Dịch
                .dropdown-item Phú Mỹ - THPT Trần Hưng Đạo
                .dropdown-item Phú Mỹ - THPT Phú Mỹ
          .col-md-6.form-group
            .fake__select.dropdown
              button.form-control.text-left.d-flex.align-items-center.justify-content-between.pr-2(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                input.w-100.border-0.user-select-none(name='grade' value=values ? values.grade : null placeholder='Khối' style='outline: none' readonly)
                span.material-icons(style='font-size: inherit') keyboard_arrow_down
              .dropdown-menu
                -for(var i = 10; i < 13; i++)
                  .dropdown-item Khối #{i}
                //- .dropdown-item Bậc Cao Đẳng
                //- .dropdown-item Bậc Đại học
          .col-md-6.form-group
            input.form-control(name='classRoom' value= values ? values.classRoom : null placeholder='Tên lớp' required)
          //- .col-md-6.form-group
          //-   input.form-control(name='identity' value= values ? values.identity : null placeholder='Chứng minh nhân dân' required)
          .col-md-6.form-group
            input.form-control(name='email' value= values ? values.email : null type='email' placeholder='Địa chỉ email' required)
          .col-md-6.form-group
            input.form-control(name='password' type='password' placeholder='Mật khẩu' required)
          .col-12.text-center
            button(type='submit').btn.btn-primary Đăng kí
            .mt-3.small.font-weight-normal
              span Đã có tài khoản?&nbsp;
              a(href='/users/login') Đăng nhập ngay!