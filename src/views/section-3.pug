extends layout

block scripts
  script(src='/javascripts/section-3.js')

block content
  form.d-none(name="exams_section3" method='POST')
    if arrayData
      input#section3__summaryTimeeee(type="text" name="time" placeholder="time")
      input#section3__score(type="text" name="scope" placeholder="scope")
      input(name='exam' value=examCode)
      input(name='lanThi' value=infoUser.lanThi.luotThi)
      input(name='user' value=infoUser._id)
  .container-fluid.p-4.min-vh-100.bg__4
    .row
      .col-12
        h3.font-weight-bold.ready__title Vòng 3
      .col-md-auto
        .section3__left__container
          .card.p-3
            //- .section3__question__wrapper(style=`background-image: url('/images/section-3/s3-brvt.jpg');`)
            .section3__question__wrapper(style=`background-image: url('${arrayData[arrayData.length - 1].image}');`)
              .section3__question__card.grid-container
                //- .section3__question__card__item.default(data-item=`1` class=`section3__1` data-value=`1`) 1
                //- .section3__question__card__item.default(data-item=`1` class=`section3__2` data-value=`1`) 2
                //- .section3__question__card__item.default(data-item=`1` class=`section3__3` data-value=`1`) 3
                //- .section3__question__card__item.default(data-item=`1` class=`section3__4` data-value=`1`) 4
                -for(var i = 0; i < arrayData.length; i++)
                  if(i < arrayData.length - 1)
                    .section3__question__card__item.default(data-item=`${i+1}` class=`section3__${i+1}` data-value=`${arrayData[i].true}`) #{i+1}
          .card.py-3.px-4.mt-3
            .d-md-flex.align-items-center
              button(type='button' data-value=`${arrayData[arrayData.length - 1].true}`).btn.btn-primary.section3__question__background.px-5 Trả lời câu hỏi hình nền ẩn
              .ml-auto.mt-3.mt-md-0
                span Tổng thời gian:&nbsp;
                span.font-weight-bold#section3__summaryTimer 0
      .col-12.col-xl.mt-4.mt-xl-0
        .section3__question__list.d-none
          //- .section3__question__item.card.p-4(data-item=`1`)
            h4.question__question.font-weight-bold Câu 1: abc
            .question__answer
              .custom-control.custom-radio.mt-2
                input.custom-control-input(id=`section3__answer1__a` type='radio' name=`section3__answer1` value='a')
                label.custom-control-label.h5(for=`section3__answer1__a`) A. a
              .custom-control.custom-radio.mt-2
                input.custom-control-input(id=`section3__answer1__b` type='radio' name=`section3__answer1` value='b')
                label.custom-control-label.h5(for=`section3__answer1__b`) B. b
              .custom-control.custom-radio.mt-2
                input.custom-control-input(id=`section3__answer1__c` type='radio' name=`section3__answer1` value='c')
                label.custom-control-label.h5(for=`section3__answer1__c`) C. c
              .custom-control.custom-radio.mt-2
                input.custom-control-input(id=`section3__answer1__d` type='radio' name=`section3__answer1` value='d')
                label.custom-control-label.h5(for=`section3__answer1__d`) D. d
          -for(var i = 0; i < arrayData.length; i++)
            -var item = arrayData[i]
            .section3__question__item.card.p-4.d-none(data-item=`${i+1}`)
              h4.question__question.font-weight-bold Câu #{i+1}: #{item.question}
              .question__answer
                .custom-control.custom-radio.mt-2
                  input.custom-control-input(id=`section3__answer${i+1}__a` type='radio' name=`section3__answer${i+1}` value='a')
                  label.custom-control-label.h5(for=`section3__answer${i+1}__a`) A. #{item.a}
                .custom-control.custom-radio.mt-2
                  input.custom-control-input(id=`section3__answer${i+1}__b` type='radio' name=`section3__answer${i+1}` value='b')
                  label.custom-control-label.h5(for=`section3__answer${i+1}__b`) B. #{item.b}
                .custom-control.custom-radio.mt-2
                  input.custom-control-input(id=`section3__answer${i+1}__c` type='radio' name=`section3__answer${i+1}` value='c')
                  label.custom-control-label.h5(for=`section3__answer${i+1}__c`) C. #{item.c}
                //- .custom-control.custom-radio.mt-2
                  input.custom-control-input(id=`section3__answer${i+1}__d` type='radio' name=`section3__answer${i+1}` value='d')
                  label.custom-control-label.h5(for=`section3__answer${i+1}__d`) D. #{item.d}
          .card.py-3.px-4.mt-3
            .d-md-flex.align-items-center
              button(type='button').btn.btn-primary.section3__question__check__result.px-5 So kết quả
              .ml-auto.mt-3.mt-md-0
                span Thời gian còn lại:&nbsp;
                span.font-weight-bold#section3__questionPendingTimer 10